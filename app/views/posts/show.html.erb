<section class="inner-section">
<div class="container">
<div class="row">

<p id="notice"><%= notice %></p>
<%#= image_tag(@post.avatar_url) %>
<%= video_tag(@post.avatar_url) %>
<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @post.description %>
</p>

<p>
  <strong>Date:</strong>
  <%= @post.date %>
</p>

<p>
  <strong>Post type:</strong>
  <%= @post.post_type_id %>
</p>

<p>
  <strong>User:</strong>
  <%= @post.user_id %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
</div>
</div>
</section>