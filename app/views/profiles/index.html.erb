<section class="inner-section">
<div class="container">
<div class="row">

<h2 class="heading">Listing Profiles</h2>

<table class="table table-bordered" id="main-table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Dob</th>
      <th>Education</th>
      <th>Gender</th>
      <th>Phone</th>
      <th>Proffession</th>
      <th>Political career</th>
      <th>Other activity</th>
      <th>Address</th>
      <th>User</th>
      <th>Position</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.name %></td>
        <td><%= profile.dob %></td>
        <td><%= profile.education %></td>
        <td><%= profile.gender %></td>
        <td><%= profile.phone %></td>
        <td><%= profile.proffession %></td>
        <td><%= profile.political_career %></td>
        <td><%= profile.other_activity %></td>
        <td><%= profile.address %></td>
        <td><%= profile.user_id %></td>
        <td><%= profile.position_id %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<button type="button" class="btn btn-primary"><%= link_to 'New Profile', new_profile_path %></button>

</div>
</div>
</section>
<br>


