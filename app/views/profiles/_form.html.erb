<%= form_for(@profile) do |f| %>
  <% if @profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% @profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :image %><br>
    <%= f.file_field :image %>
  </div>

  <div class="field">
    <%= f.label :dob %><br>
    <%= f.text_field :dob %>
  </div>
  <div class="field">
    <%= f.label :education %><br>
    <%= f.text_area :education %>
  </div>
  <div class="field">
    <%= f.label :gender %> <br />
   <%= f.label :gender_male, 'male' %>
   <%= f.radio_button :gender, 'male', :checked => true %>
   <%= f.label :gender_female, 'female' %>
   <%= f.radio_button :gender, 'female' %><br />
  </div>
  <div class="field">
    <%= f.label :phone %><br>
    <%= f.number_field :phone %>
  </div>
  <div class="field">
    <%= f.label :proffession %><br>
    <%= f.text_area :proffession %>
  </div>
  <div class="field">
    <%= f.label :political_career %><br>
    <%= f.text_area :political_career %>
  </div>
  <div class="field">
    <%= f.label :other_activity %><br>
    <%= f.text_area :other_activity %>
  </div>
  <div class="field">
    <%= f.label :address %><br>
    <%= f.text_area :address %>
  </div>
  <div class="field">
    <%= f.label :user_id %><br>
    <%= f.number_field :user_id %>
  </div>
  <div class="field">
    <%= f.label :position_id %><br>
    <%= f.collection_select :position_id, Position.all, :id, :name, prompt: "Select Your Position" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
<script>
  $( function() {
    $( "#profile_dob" ).datepicker();
    dateFormat: 'yyyy-mm-dd'
  } );
  </script>


